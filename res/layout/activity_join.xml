<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_alignStart="@+id/new_email"
        android:layout_alignLeft="@+id/new_email"
        android:id="@+id/new_first_name"
        android:hint="First name"
        android:inputType="textPersonName"
        android:maxLines="1"/>
    
    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/new_first_name"
        android:layout_alignBaseline="@id/new_first_name"
        android:id="@+id/new_last_name"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:maxLines="1"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/new_email"
        android:layout_below="@id/new_first_name"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/new_password"
        android:layout_below="@id/new_email"
        android:hint="Create your password"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/new_password_confirm"
        android:layout_below="@id/new_password"
        android:hint="Confirm your password"
        android:inputType="textPassword"
        android:maxLines="1"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:text="Select your birthday"
        android:textAllCaps="false"
        android:layout_below="@id/new_password_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:id="@+id/new_birthday" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/new_birthday"
        android:layout_alignStart="@id/new_birthday"
        android:layout_alignLeft="@id/new_birthday"
        android:layout_marginTop="8dp"
        android:id="@+id/new_gender"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Female" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="Male"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:layout_marginTop="8dp"
        android:layout_alignStart="@id/new_password_confirm"
        android:layout_alignLeft="@id/new_password_confirm"
        android:layout_alignEnd="@id/new_password_confirm"
        android:layout_alignRight="@id/new_password_confirm"
        android:id="@+id/new_agree"
        android:layout_below="@id/new_gender"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/new_agree"
        android:id="@+id/btn_join_confirm"
        android:text="Create Account"
        android:textSize="18dp"
        android:textAllCaps="false" />
</RelativeLayout>